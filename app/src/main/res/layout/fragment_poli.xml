<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Poli 1 -->
        <androidx.cardview.widget.CardView
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:padding="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Poli Umum"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView android:text="Dr. Andi (Umum)" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:text="Dr. Sari (Umum)" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:text="Dr. Budi (Umum)" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Poli 2 -->
        <androidx.cardview.widget.CardView
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:padding="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Poli Anak"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView android:text="Dr. Lina (Anak)" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:text="Dr. Dodi (Anak)" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:text="Dr. Rina (Anak)" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Poli 3 -->
        <androidx.cardview.widget.CardView
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:padding="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Poli Gigi"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView android:text="Dr. Yanto (Gigi)" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:text="Dr. Citra (Gigi)" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:text="Dr. Dani (Gigi)" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
