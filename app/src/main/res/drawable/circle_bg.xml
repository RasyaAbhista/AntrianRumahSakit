<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- fill color (ubah sesuai colors.xml jika perlu) -->
    <solid android:color="@color/teal_700" />

    <!-- optional stroke -->
    <stroke
        android:width="1dp"
        android:color="@color/teal_900" />

    <!-- padding supaya teks nggak nempel -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>